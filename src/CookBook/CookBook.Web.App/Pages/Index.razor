@page "/"
@using CookBook.Web.App.Resources.Texts
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<IndexResources> IndexLocalizer

<div class="position-fixed" style="
    background-image: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.83)), url('/images/background.png');     
    background-position: center; 
    background-size: cover; 
    min-height: 100vh; 
    width: 100%;
    top: 0;
    left: 0;
    z-index: -1;">
</div>
<div class="row">
    <div class="jumbotron col-md-6 bg-transparent text-white mt-5">
        <h1>@IndexLocalizer["Page_Title"]</h1>
        <p class="lead font-weight-bold mt-5 mb-4">
            @IndexLocalizer["Page_Description"]
        </p>
        <NavLink href="/recipes" Match="NavLinkMatch.All" class="btn btn-success btn-lg">
            @IndexLocalizer["GoToRecipesList_Button"]
        </NavLink>

    </div>
</div>